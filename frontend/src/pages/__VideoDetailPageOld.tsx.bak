import { useEffect, useState } from 'react'
import { useParams, useNavigate } from 'react-router-dom'
import { Download, Trash2, Play } from 'lucide-react'
import api from '../services/api'
import toast from 'react-hot-toast'

export default function VideoDetailPage() {
  const { id } = useParams()
  const navigate = useNavigate()
  const [video, setVideo] = useState<any>(null)
  const [isLoading, setIsLoading] = useState(true)

  useEffect(() => {
    loadVideo()
    const interval = setInterval(loadVideo, 5000) // Poll every 5 seconds
    return () => clearInterval(interval)
  }, [id])

  const loadVideo = async () => {
    try {
      const response = await api.get(`/videos/${id}`)
      setVideo(response.data)
    } catch (error) {
      toast.error('Failed to load video')
    } finally {
      setIsLoading(false)
    }
  }

  const deleteVideo = async () => {
    if (!confirm('Are you sure you want to delete this video?')) return

    try {
      await api.delete(`/videos/${id}`)
      toast.success('Video deleted')
      navigate('/')
    } catch (error) {
      toast.error('Failed to delete video')
    }
  }

  if (isLoading) {
    return (
      <div className="flex items-center justify-center py-12">
        <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-primary-600"></div>
      </div>
    )
  }

  if (!video) {
    return <div>Video not found</div>
  }

  return (
    <div className="max-w-4xl mx-auto">
      <div className="mb-6 flex items-center justify-between">
        <h1 className="text-3xl font-bold text-gray-900">{video.title}</h1>
        <div className="flex space-x-2">
          {video.video_url && (
            <a
              href={video.video_url}
              download
              className="btn-secondary flex items-center"
            >
              <Download className="w-4 h-4 mr-2" />
              Download
            </a>
          )}
          <button onClick={deleteVideo} className="btn-danger flex items-center">
            <Trash2 className="w-4 h-4 mr-2" />
            Delete
          </button>
        </div>
      </div>

      {video.status !== 'completed' && (
        <div className="card p-6 mb-6">
          <div className="flex items-center justify-between mb-2">
            <h3 className="font-semibold">Generation Progress</h3>
            <span className="text-sm text-gray-600">{Math.round(video.progress)}%</span>
          </div>
          <div className="w-full bg-gray-200 rounded-full h-2">
            <div
              className="bg-primary-600 h-2 rounded-full transition-all"
              style={{ width: `${video.progress}%` }}
            />
          </div>
          <p className="text-sm text-gray-600 mt-2">Status: {video.status}</p>
        </div>
      )}

      {video.video_url && (
        <div className="card p-0 overflow-hidden mb-6">
          <video
            controls
            className="w-full"
            poster={video.thumbnail_url}
          >
            <source src={video.video_url} type="video/mp4" />
          </video>
        </div>
      )}

      <div className="card p-6 mb-6">
        <h3 className="font-semibold mb-4">Video Information</h3>
        <dl className="grid grid-cols-2 gap-4">
          <div>
            <dt className="text-sm text-gray-600">Style</dt>
            <dd className="font-medium">{video.style}</dd>
          </div>
          <div>
            <dt className="text-sm text-gray-600">Resolution</dt>
            <dd className="font-medium">{video.resolution}</dd>
          </div>
          <div>
            <dt className="text-sm text-gray-600">Orientation</dt>
            <dd className="font-medium capitalize">{video.orientation}</dd>
          </div>
          <div>
            <dt className="text-sm text-gray-600">Duration</dt>
            <dd className="font-medium">{video.duration ? `${video.duration}s` : 'N/A'}</dd>
          </div>
        </dl>
      </div>

      <div className="card p-6">
        <h3 className="font-semibold mb-4">Script</h3>
        <pre className="whitespace-pre-wrap text-sm text-gray-700">
          {video.script}
        </pre>
      </div>
    </div>
  )
}

